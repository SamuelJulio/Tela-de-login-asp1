
@{
    ViewBag.Title = "login";
    Layout = "~/Views/Conta/_LayoutPage1.cshtml";
}


<h1> Login</h1>
<div class="w3ls-login box box--big">
    <!-- form starts here -->
    <form action= "verificar" method="post">
        <div class="agile-field-txt">
            <label><i class="fa fa-user" aria-hidden="true"></i> Usuário </label>
            <input type="text" name="Nome" placeholder="Coloque o nome de usuário" required="" />
        </div>
        <div class="agile-field-txt">
            <label><i class="fa fa-unlock-alt" aria-hidden="true"></i> Senha </label>
            <input type="password" name="Senha" placeholder="Coloque a senha" required="" id="myInput" />
            <div class="agile_label">
                <input id="check3" name="check3" type="checkbox" value="show password" onclick="myFunction()">
                <label class="check" for="check3">Mostrar senha</label>
            </div>
            <div class="agile-right">
                <a href="#">Esqueceu sua senha?</a>
            </div>
        </div>
        <!-- script for show password -->
        <script>
				function myFunction() {
					var x = document.getElementById("myInput");
					if (x.type === "password") {
						x.type = "text";
					} else {
						x.type = "password";
					}
				}
        </script>
        <!-- //end script -->
        <input type="submit" value="LOGIN">
    </form>
</div>
